#include<bits/stdc++.h>
using namespace std;
 
int main() {
    int n; 
    cin >> n;
    int x = 0;
    for(int i = 0; i < n; i++) {
        string s; 
        cin >> s;
        for(int j = 0; j < 3; j++) {
            if(s[j] == '+') {
                x++;
                break;
            } else if(s[j] == '-') {
                x--;
                break;
            }
        }
                    
            // if(s.find('+') != string::npos) x++;
            // else x--;
            
    }
    cout << x << endl;
    return 0;
}
